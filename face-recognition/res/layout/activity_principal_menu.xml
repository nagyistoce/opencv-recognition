<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PrincipalMenuActivity" >

    <TextView
        android:id="@+id/tv_title_selecione_opcao"
        android:typeface="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_title_selecione_opcao" />
    
    <ImageButton 
        android:id="@+id/imgbt_face_database"
        android:contentDescription="@string/imgbt_face_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/face_database"
        android:layout_below="@id/tv_title_selecione_opcao"
        />

    <ImageButton 
        android:id="@+id/imgbt_face_recog"
        android:contentDescription="@string/imgbt_face_recog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgbt_face_database"
        android:layout_margin="20dp"
        android:src="@drawable/face_recog"
        android:layout_below="@id/tv_title_selecione_opcao" />
    
</RelativeLayout>